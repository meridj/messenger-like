@import '~/styles/charts'

.input-message
    width: 100%
    height: 100%
    margin: 0
    padding: 3rem
    border: none
    outline: none
    font-size: 1.3em
    font-family: $font
    background-color: #f1fff0
    box-shadow: 0px 0px 10px rgba(150, 150, 150, 1);

.input-username
    background-color: $linkBackgroundColor
    width: 20%
    margin: 1rem
    border: none
    outline: none
    font-family: $font
    font-weight: $fontLight
    font-size: 1em
    text-shadow: 0px 0px 10px rgba(150, 150, 150, 1);
    transition: .2s
    &:focus
        padding: 1rem
        background-color: #f1fff0
