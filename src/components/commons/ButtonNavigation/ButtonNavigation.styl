@import '~/styles/charts'

.home-link
    background-color: $linkBackgroundColor
    font-weight: $fontBold
    padding: 1rem 4rem
    border-radius: 25px
    transition: 0.3s
    &:hover
        border-radius: 3px
        box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.75);

.chat-room-link
    position: absolute
    top: 1rem
    left: 1rem
    background-color: $linkBackgroundColor
    font-weight: $fontBold
    padding: 1rem 2rem
    border-radius: 25px
    transition: 0.3s
    &:hover
        border-radius: 3px
        box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.75);
